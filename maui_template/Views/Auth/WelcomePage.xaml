<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controller="clr-namespace:maui_template.Views.Controller"
    x:Class="maui_template.Views.Auth.WelcomePage">
    <StackLayout
        VerticalOptions="CenterAndExpand"
        Padding="30,0">
        <Image
            Source="onboard" />
        <Label
            Text="Explore banking, explore benefits"
            FontSize="32"
            LineHeight="1.1"
            FontFamily="SFBold"
            TextColor="{DynamicResource Primary}" />
        <Label
            Margin="0,20,0,0"
            Text="Explore a limitless banking experience with great benefits of online real time balances
and transactions"
            FontSize="16"
            TextColor="{DynamicResource SecondaryTextColor}" />
        <controller:ButtonView
            Margin="0,40,0,0"
            Clicked="Continue_Clicked"
            Text="Get started" />
    </StackLayout>
</ContentPage>
